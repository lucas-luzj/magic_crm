<?xml version="1.0" encoding="UTF-8"?>
<bpmn:definitions xmlns:bpmn="http://www.omg.org/spec/BPMN/20100524/MODEL" 
                  xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI" 
                  xmlns:dc="http://www.omg.org/spec/DD/20100524/DC" 
                  xmlns:di="http://www.omg.org/spec/DD/20100524/DI" 
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:flowable="http://flowable.org/bpmn"
                  id="Definitions_1" 
                  targetNamespace="http://bpmn.io/schema/bpmn">
  
  <bpmn:process id="leaveProcess" name="员工请假流程" isExecutable="true">
    
    <!-- 开始事件 -->
    <bpmn:startEvent id="startEvent" name="开始请假申请">
      <bpmn:outgoing>flow1</bpmn:outgoing>
    </bpmn:startEvent>
    
    <!-- 员工提交请假申请 -->
    <bpmn:userTask id="applyTask" name="提交请假申请" flowable:assignee="${employee}">
      <bpmn:incoming>flow1</bpmn:incoming>
      <bpmn:outgoing>flow2</bpmn:outgoing>
    </bpmn:userTask>
    
    <!-- 请假天数判断网关 -->
    <bpmn:exclusiveGateway id="decisionDays" name="请假天数判断">
      <bpmn:incoming>flow2</bpmn:incoming>
      <bpmn:outgoing>flow3</bpmn:outgoing>
      <bpmn:outgoing>flow4</bpmn:outgoing>
    </bpmn:exclusiveGateway>
    
    <!-- 部门经理审批（<=3天） -->
    <bpmn:userTask id="mgrTask" name="部门经理审批" flowable:assignee="${manager}">
      <bpmn:incoming>flow3</bpmn:incoming>
      <bpmn:outgoing>flow5</bpmn:outgoing>
    </bpmn:userTask>
    
    <!-- HR审批（>3天） -->
    <bpmn:userTask id="hrTask" name="HR审批" flowable:assignee="hr">
      <bpmn:incoming>flow4</bpmn:incoming>
      <bpmn:outgoing>flow6</bpmn:outgoing>
    </bpmn:userTask>
    
    <!-- 结束事件 -->
    <bpmn:endEvent id="endEvent" name="流程结束">
      <bpmn:incoming>flow5</bpmn:incoming>
      <bpmn:incoming>flow6</bpmn:incoming>
    </bpmn:endEvent>
    
    <!-- 流程连线 -->
    <bpmn:sequenceFlow id="flow1" sourceRef="startEvent" targetRef="applyTask" />
    <bpmn:sequenceFlow id="flow2" sourceRef="applyTask" targetRef="decisionDays" />
    
    <!-- 小于等于3天的分支 -->
    <bpmn:sequenceFlow id="flow3" name="≤3天" sourceRef="decisionDays" targetRef="mgrTask">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">${days &lt;= 3}</bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    
    <!-- 大于3天的分支 -->
    <bpmn:sequenceFlow id="flow4" name=">3天" sourceRef="decisionDays" targetRef="hrTask">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">${days &gt; 3}</bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    
    <bpmn:sequenceFlow id="flow5" sourceRef="mgrTask" targetRef="endEvent" />
    <bpmn:sequenceFlow id="flow6" sourceRef="hrTask" targetRef="endEvent" />
    
  </bpmn:process>
  
  <!-- BPMN图形信息 -->
  <bpmndi:BPMNDiagram id="BPMNDiagram_1">
    <bpmndi:BPMNPlane id="BPMNPlane_1" bpmnElement="leaveProcess">
      
      <!-- 开始事件 -->
      <bpmndi:BPMNShape id="startEvent_di" bpmnElement="startEvent">
        <dc:Bounds x="152" y="102" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="134" y="145" width="72" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <!-- 提交请假申请 -->
      <bpmndi:BPMNShape id="applyTask_di" bpmnElement="applyTask">
        <dc:Bounds x="240" y="80" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <!-- 请假天数判断网关 -->
      <bpmndi:BPMNShape id="decisionDays_di" bpmnElement="decisionDays" isMarkerVisible="true">
        <dc:Bounds x="395" y="95" width="50" height="50" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="383" y="71" width="72" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <!-- 部门经理审批 -->
      <bpmndi:BPMNShape id="mgrTask_di" bpmnElement="mgrTask">
        <dc:Bounds x="500" y="80" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <!-- HR审批 -->
      <bpmndi:BPMNShape id="hrTask_di" bpmnElement="hrTask">
        <dc:Bounds x="500" y="200" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <!-- 结束事件 -->
      <bpmndi:BPMNShape id="endEvent_di" bpmnElement="endEvent">
        <dc:Bounds x="652" y="102" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="648" y="145" width="44" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <!-- 连线 -->
      <bpmndi:BPMNEdge id="flow1_di" bpmnElement="flow1">
        <di:waypoint x="188" y="120" />
        <di:waypoint x="240" y="120" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="flow2_di" bpmnElement="flow2">
        <di:waypoint x="340" y="120" />
        <di:waypoint x="395" y="120" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="flow3_di" bpmnElement="flow3">
        <di:waypoint x="445" y="120" />
        <di:waypoint x="500" y="120" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="463" y="102" width="25" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="flow4_di" bpmnElement="flow4">
        <di:waypoint x="420" y="145" />
        <di:waypoint x="420" y="240" />
        <di:waypoint x="500" y="240" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="427" y="190" width="25" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="flow5_di" bpmnElement="flow5">
        <di:waypoint x="600" y="120" />
        <di:waypoint x="652" y="120" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="flow6_di" bpmnElement="flow6">
        <di:waypoint x="600" y="240" />
        <di:waypoint x="670" y="240" />
        <di:waypoint x="670" y="138" />
      </bpmndi:BPMNEdge>
      
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
  
</bpmn:definitions>